  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": "18.15.0",
    "pnpm": "8.1.1",
    "npm": "please use pnpm instead"
  },
  "packageManager": "pnpm@8.1.1",
  "scripts": {
    "app-urql": "pnpm -F \"@learn-graphql/app-urql\"",
    "api": "     pnpm -F \"@learn-graphql/api\"",
