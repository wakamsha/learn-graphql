    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7",
    "prettier-plugin-organize-imports": "3.2.2",
    "typescript": "5.0.3"
  },
  "lint-staged": {
    "{apps,packages}/**/src/**/*.{ts,tsx}": [
      "cspell",
      "prettier -c",
      "eslint -c .eslintrc.cjs"
    ]
